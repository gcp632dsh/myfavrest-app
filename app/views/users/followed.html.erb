<% provide(:title, "フォロワー一覧") %>
<% breadcrumb :followed, @user %>
<%= breadcrumbs separator: " &rsaquo; " %>
<br>
<div class="container">
    <%= @user.username %>さんがフォローされているユーザー
    <% if @users.empty? %>
        <h4 class="mt-5">まだいません。</h4>
    <% else %>
        <%= render partial: 'users', locals: {users: @users} %>
    <% end %>
</div>
