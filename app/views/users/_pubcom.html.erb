<div class='mymenu-tabs row'>
    <%= link_to user_path(user, tab_id: 1), class: "col-6 tab-off" do %>
        <span class="mymenu-text">所属コミュニティ</span>
    <% end %>
    <%= link_to user_path(user, tab_id: 2), class: "col-6 tab-on" do %>
        <span class="mymenu-text">誰でもコミュニティ</span>
    <% end %>
</div>
<br>
<%= link_to "誰でもコミュニティのTOPページへ", community_path(community) %>
<br>
<div class="myuser-community row">
    <% community.posts.each do |post| %>
        <div class = "col-sm-12 col-md-12 col-lg-4 mb-5">
            <!-- カード START -->
            <div class="card">
                <% if post.image.attached? %>
                    <%= image_tag post.image, class:"card-img-top" %>
                <% else %>
                    <%= image_tag ("no_image.png"), class:"card-img-top" %>
                <% end %>
                <div class="card-body">
                    <p class="card-title"><%= post.title %></p>
                    <div class="card-text">
                        <span><%= link_to "詳細", community_post_path(community, post), class: "card-link" %></span><br>
                    </div>
                </div>
            </div>
            <!-- カード END -->
        </div>
    <% end %>
</div>