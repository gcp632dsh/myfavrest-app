<h1>投稿の詳細</h1>
<div class="nav justify-content-end"><%= link_to '一覧',posts_path, class:'nav-link' %></div>
<table class="table table-hover">
    <tbody>
        <tr>
            <th>ユーザ名</th>
            <td><%= link_to @post.user.username, user_path(@post.user_id) %></td>
        </tr>
        <tr>
            <th>店名</th>
            <td><%= @post.title %></td>
        </tr>
        <tr>
            <th>評価</th>
            <td><%= @post.score %></td>
        </tr>
        <tr>
            <th>口コミ</th>
            <td><%= simple_format(h(@post.description), {}, sanitize: false, wrapper_tag:"div") %></td>
        </tr>
        <tr>
            <th>都道府県</th>
            <td><%= @pref_name %></td>
        </tr>
        <tr>
            <th>エリア</th>
            <td><%= @post.area %></td>
        </tr>
        <tr>
            <th>料理ジャンル</th>
            <td><%= @post.rest_type %></td>
        </tr>
        <tr>
            <th>利用シーン</th>
            <td><%= @post.objective %></td>
        </tr>
        <tr>
            <th>こだわり条件</th>
            <td><%= @post.features %></td>
        </tr>
        <tr>
            <th>投稿日時</th>
            <td><%= @post.created_at %></td>
        </tr>
        <tr>
            <th>更新日時</th>
            <td><%= @post.updated_at %></td>
        </tr>
        <tr>
            <th>画像</th>
            <td><%= image_tag @post.image.variant(
                        combine_options: {   
                            resize: "200^",   
                            gravity: "Center",   
                            crop: "500x500+0+0",   
                            auto_orient: true    
                        }
                    ),alt: "shop image" if @post.image.attached? %></td>
        </tr>
    </tbody>
</table>
<h4>ユーザ情報</h4>
<div>
    <%= link_to @post.user.username, user_path(@post.user_id) %>さん
    <% begin %>
        <%= (Date.today.strftime("%Y%m%d").to_i - @post.user.birth_ym.strftime("%Y%m%d").to_i) / 10000 %>歳
    <% rescue %>
        <%= %>
    <% end %>
    <%= @post.user.work_idt %>
    <%= @post.user.work_comp %>
    <%= @post.user.work_ocpn %>
    <%= @post.user.gender %>
</div>
<div class="post-<%= @post.id %>">
    <%= render partial: 'shared/like', locals: {post: @post} %>
</div>
<div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, post: @post } %>
</div>

<% if user_signed_in? %>
    <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
    <br>
    <% if @post.user.id == current_user.id %>
        <%= link_to "編集",edit_post_path(@post),class:"btn btn-primary" %>
        <%= link_to "削除", @post, method: :delete, data:{ confirm: "投稿「#{@post.title}」を削除します。よろしいですか？" } ,class:"btn btn-danger" %>
    <% end %>
<% end %>