<% if post.errors.present? %>
    <ul id="error_explanation">
        <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with model:post, local:true do |f| %>
    <div class="form-group">
        <%= f.label "店名" %>
        <%= f.text_field :title, class:'form-control', id: 'title_name' %>
    </div>
    <div class="form-group">
        <%= f.label "評価" %>
        <%= f.collection_select :score, Post.all, :score, :score, include_blank: '評価を選択してください' %>
    </div>
    <div class="form-group">
        <%= f.label "口コミ" %>
        <%= f.text_area :description, row:5, class: 'form-control', id:'post_description' %>
    </div>
    <div class="form-group">
        <%= f.label "都道府県" %>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: '都道府県を選択してください' %>
    </div>
    <div class="form-group">
        <%= f.label "エリア" %>
        <%= f.collection_select :area, Post.all, :area, :area, include_blank: 'エリアを選択してください' %>
    </div>
    <div class="form-group">
        <%= f.label "料理ジャンル" %>
        <%= f.collection_select :type, Post.all, :type, :type, include_blank: '料理ジャンルを選択してください' %>
    </div>
    <div class="form-group">
        <%= f.label "利用シーン" %>
        <%= f.collection_select :objective, Post.all, :objective, :objective, include_blank: '利用シーンを選択してください' %>
    </div>
    <div class="form-group">
        <%= f.label "こだわり条件" %>
        <%= f.text_area :features, row:2, class: 'form-control', id:'post_features' %>
    </div>
    <div class="form-group">
        <%= f.label "利用人数" %>
        <%= f.text_field :people, class:'form-control', id: 'people_number' %>
    </div>
    <div class="form-group">
        <%= f.label "画像をアップロード" %>
        <%= f.file_field :image, class: 'form-control' %>
    </div>
    <%= render partial: 'shared/gmap-new' %>
    <%= f.submit "更新する", class:'btn btn-primary' %>
<% end %>