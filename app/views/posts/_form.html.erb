<% if post.errors.present? %>
    <ul id="error_explanation">
        <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>
<%= form_with model:post, local:true do |f| %>
    <div class="form-group">
        <%= f.label "店名" %>
        <%= f.text_field :title, class:'form-control', id: 'title_name' %>
    </div>
    <div class="form-group">
        <%= f.label "口コミ" %>
        <%= f.text_area :description, row:5, class: 'form-control', id:'post_description' %>
    </div>
    <div class="form-group">
        <%= f.label "都道府県" %>
        <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, include_blank: '都道府県を選択してください' %>
    </div>
    <div class="form-group">
        <%= f.label "画像をアップロード" %>
        <%= f.file_field :image, class: 'form-control' %>
    </div>
    <%= render partial: 'shared/gmap-new' %>
    <%= f.submit "更新する", class:'btn btn-primary' %>
<% end %>