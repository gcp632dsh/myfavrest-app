<div class="follow_btn">
<% if user_signed_in? %>
    <% if current_user.id != user.id %>
        <% if current_user.following?(user) %>
            <%= link_to 'フォロー解除', unfollow_path(user.id), method: :post, remote: true %>
        <% else %>
            <%= link_to 'フォロー', follow_path(user.id), method: :post, remote: true %>
        <% end %>
    <% end %>
<% end %>
    <p>
        フォロー数：<%= user.follower.count %>
        <br>
        フォロワー数：<%= user.followed.count %>
    </p>
</div>